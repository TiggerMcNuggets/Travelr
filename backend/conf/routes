
# ################## REFACTORED API BELOW ######################

GET         /                               controllers.UserController.index()

# Populate static data
POST        /populate                       controllers.StaticDataController.populateDatabase()

# Auth
POST        /login                          controllers.SecurityController.login(request: Request)
POST        /logout                         controllers.SecurityController.logout(request: Request)

# Users
GET         /users                   controllers.UserController.getAllUsers(request: Request)
POST        /users                     controllers.UserController.addUser(request: Request)

# Nationalities
GET         /nationalities                  controllers.NationalityController.getNationalities()

#Travller Types
GET         /traveller-types                controllers.TravellerTypeController.getTravellerTypes()


# Destinations

GET         /destinations                   controllers.DestinationController.listUserDestinations(request: Request)
POST        /destinations                   controllers.DestinationController.createDestination(request: Request)