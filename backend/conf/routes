GET         /                               controllers.UserController.index()

# Populate static data
POST        /populate                       controllers.PopulateController.populateDatabase()

# Auth
POST        /login                          controllers.SecurityController.login(request: Request)
POST        /logout                         controllers.SecurityController.logout(request: Request)

# Nationalities
GET         /nationalities                  controllers.NationalityController.getNationalities()

#Traveller Types
GET         /traveller-types                controllers.TravellerTypeController.getTravellerTypes()

# Users
GET         /users                          controllers.UserController.getUsers(request: Request)
POST        /users                          controllers.UserController.createUser(request: Request)
GET         /users/:id                      controllers.UserController.getUser(request: Request, id: Long)
PUT         /users/:id                      controllers.UserController.updateUser(request: Request, id: Long)

# Destinations
GET         /destinations                   controllers.DestinationController.getUserDestinations(request: Request)
POST        /destinations                   controllers.DestinationController.createDestination(request: Request)
GET         /destinations/:id               controllers.DestinationController.getUserDestination(request: Request, id: Long)
PUT         /destinations/:id               controllers.DestinationController.updateUserDestination(request: Request, id: Long)

# Trips
GET         /trips                          controllers.TripController.getUserTrips(request: Request)
POST        /trips                          controllers.TripController.createTrip(request: Request)