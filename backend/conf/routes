GET         /                               controllers.UserController.index()

# Populate static data
POST        /populate                       controllers.PopulateController.populateDatabase()

POST        /login                          controllers.SecurityController.login(request: Request)
POST        /logout                         controllers.SecurityController.logout(request: Request)

# Nationalities
GET         /nationalities                  controllers.NationalityController.getNationalities()

#Traveller Types
GET         /traveller-types                controllers.TravellerTypeController.getTravellerTypes()

# Travellers
GET         /travellers                     controllers.UserController.getUsers(request: Request)
POST        /travellers                     controllers.UserController.createUser(request: Request)
GET         /travellers/me                  controllers.UserController.getMe(request: Request)
GET         /travellers/:id                 controllers.UserController.getUser(request: Request, id: Long)
PUT         /travellers/:id                 controllers.UserController.updateUser(request: Request, id: Long)
DELETE      /travellers/:id                 controllers.UserController.deleteUser(request: Request, id: Long)


